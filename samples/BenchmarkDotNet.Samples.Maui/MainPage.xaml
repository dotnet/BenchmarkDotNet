<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BenchmarkDotNet.Samples.Maui.MainPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,44,0,0" />
        </OnPlatform>
    </ContentPage.Padding>
    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            x:Name="Run"
            Text="Run"
            Margin="10,10,10,0"
            Clicked="Button_Clicked" />
        <ScrollView Orientation="Both" Grid.Row="1">
            <Label
                x:Name="Summary"
                Grid.Row="1"
                Padding="10">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <On Platform="Android" Value="monospace" />
                        <On Platform="iOS" Value="Courier" />
                        <On Platform="WinUI" Value="Consolas" />
                        <On Platform="MacCatalyst" Value="Courier" />
                    </OnPlatform>
                </Label.FontFamily>
            </Label>
        </ScrollView>
        <ActivityIndicator
            x:Name="Indicator"
            Grid.RowSpan="2"
            Color="DarkGray"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </Grid>
</ContentPage>
